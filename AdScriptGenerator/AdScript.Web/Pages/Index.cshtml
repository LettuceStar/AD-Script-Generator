@page
@model IndexModel
@{
    ViewData["Title"] = "AD Script Generator";
}

<h1>AD Script Generator</h1>

<form method="post">
    <button type="submit" class="btn btn-primary" asp-page-handler="Generate">
        Generate Simone Command
    </button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.GeneratedCommand))
{
    <h3>Generated PowerShell Command</h3>
    <pre style="white-space: pre-wrap;">@Model.GeneratedCommand</pre>
}
